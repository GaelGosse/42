#!/bin/sh

alias gcw='gcc -Wall -Wextra -Werror -g'
alias out='./a.out'

alias gcl='git clone'
alias norm='norminette -R CheckForbiddenSourceHeader'
alias c='clear'

alias z='source ~/.zshrc'
alias b='source ~/.bashrc'

alias set_rc='cp -f ~/42/.shortcut ~/.'
alias get_rc='cp -f ~/.shortcut ~/42/.'

# shortcut
function poush()
{
	date
	# take .shortcut at ~/.
	cp -f ~/.shortcut .
	git add .
	git commit -m $1
	git push
}

function pull()
{
	date*
	cp -f ~/42/.shortcut ~/.
	git pull
}

function cfg()
{
	a=$(pwd)
	cd && code .shortcut
	cd $a
}

function cpl()
{
	rm -f *.gch
	rm -f */*.gch
	gcc -Wall -Wextra -Werror $@ && ./a.out
}

function cpla()
{
	if [[ "$#" > 1 ]]; then
		echo "something wrong with args"
	fi
	rm -f *.gch
	if [ "${1/-*s}" != $1 ]; then
		rm -f */*.gch
	fi
	if [ "${1/-*m}" != $1 ]; then
		make
	fi
	gcc -Wall -Wextra -Werror *.c *.h */*.c */*.h && ./a.out
}

# with args
function refresh()
{
	if [[ "$#" > 0 ]]; then
		while true; do
			gcc -Wall -Wextra -Werror $@ && ./a.out
			rm -f *.gch
			sleep 1
		done
	else
		echo "no args"
	fi
}

# all
function refresha()
{
	while true; do
		gcc -Wall -Wextra -Werror *.c *.h && ./a.out
		rm -f *.gch
		sleep 1
	done
}

# all sub
function refresh_all()
{
	while true; do
		gcc -Wall -Wextra -Werror *.c *.h */*.c */*.h && ./a.out
		rm -f *.gch && rm -f */*.gch
		sleep 1
	done
}

function clr()
{
	if [[ "${1/-f}" != $1 ]]; then
		find . -name '*.gch' -exec rm {}
		clear
	fi
	echo "Are you sure to clean all temporary files here and also in all subfolders ?"
	read -r b
	if [[ $b == "yes" || $b == "y" ]]; then
		find . -name '*.gch' -exec rm {}
		rm -f a.out
		clear
	else
		echo "nothing happens"
	fi
}

function crt()
{
	if [[ ! -d "$1" ]]; then
		mkdir $1 && cd $1 && code . 
	else
		echo "$1 already exist"
	fi
}





