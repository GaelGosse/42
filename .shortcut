function split()
{
	if [[ $# == 0 ]]
	then
		echo "Missing args, the first must be the string and the second will be the delimiter"
	elif [[ $# == 1 ]]
	then
		text=$1
		IFS=' '
		read -a strarr <<< "$text"
		echo -e "length: ${#strarr[*]} \n"
		for val in "${strarr[@]}";
		do
			printf "$val\n"
		done
	elif [[ $# == 2 ]]
	then
		text=$1
		IFS=$2
		read -a strarr <<< "$text"
		echo -e "length: ${#strarr[*]} \n"
		for val in "${strarr[@]}";
		do
			printf "$val\n"
		done
	fi
}

